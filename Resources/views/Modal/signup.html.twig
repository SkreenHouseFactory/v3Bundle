{% extends 'SkreenHouseFactoryV3Bundle:Modal:login.html.twig' %}

{% block form %}
  {% if success %}
      <div id="close"></div>
  {% else %}
    <div class="entete">
      <p class="text-center">{{ movieplay.program.title }}</p>
      <p class="sous-titre text-center">Pour accéder à la vidéo, vous devez créer un compte gratuit sur <strong>myskreen.com</strong></p>
    </div>
    <p class="text-left">S'INSCRIRE</p>
    <div class="conteneur-form">
      {{ form_start(form, {'attr': {'class': 'form-horizontal', 'role': 'form'}}) }}
        {{ form_errors(form, {'li_attr': {'class': 'alert alert-danger'}}) }}
        <div class="form-group">
          {{ form_label(form.email, 'E-mail', {'label_attr': {'class': 'sr-only'}}) }}
          {{ form_errors(form.email, {'li_attr': {'class': 'alert alert-danger'}}) }}
          <div class="col-xs-16">
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'E-MAIL'}}) }}
          </div>
        </div>
        <div class="form-group">
          {{ form_label(form.password, 'Choisir un Mot de Passe', {'label_attr': {'class': 'sr-only'}}) }}
          {{ form_errors(form.password, {'li_attr': {'class': 'alert alert-danger'}}) }}
          <div class="col-xs-16">
            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'CHOISIR UN MOT DE PASSE'}}) }}
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-16">
            {{ form_widget(form.inscription, {'attr': {'class': 'col-xs-16 btn btn-default'}}) }}
          </div>
        </div>
      {{ form_end(form) }}
    </div>
    <div class="link">
      <a href="{{ path('modal_signin', { movieplay: movieplay.id }) }}">J'ai déjà un compte myskreen.com</a>
      <a class="mdp" href="{{ path('modal_mdp', { movieplay: movieplay.id }) }}">Mot de passe oublié ?</a>
    </div>
  {% endif %}
{% endblock %}