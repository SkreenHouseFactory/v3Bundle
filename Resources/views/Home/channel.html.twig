{% extends 'SkreenHouseFactoryV3Bundle::layout.html.twig' %}


{% block title %}{{ 'page.channel.home'|trans({'%name%': channel.name}) }}{% endblock %}

{% block content %}
<div class="container">
  <p class="pull-right"><img src="{{ channel.img }}" /></p>
  <h1>{{ channel.name }}</h2>
  
  {% if channel.live %}
  <div class="well">
  
  
  {% if channel.prev_live %}
  <h2>Juste avant : {{ channel.prev_live.program.title }}</h2>
  <img src="{{ channel.prev_live.program.picture }}" />
  {% endif %}
  
  <h2>En ce moment : {{ channel.live.program.title }}</h2>
  <img src="{{ channel.live.program.picture }}" />
  
  {% if channel.next_live %}
  <div class="well">
  <h2>juste après : {{ channel.next_live.program.title }}</h2>
  <img src="{{ channel.next_live.program.picture }}" />
  </div>
  {% endif %}
  
  </div>
  {% endif %}


  <ul class="nav nav-pills">
    <li class="dropdown active">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">Choisir une date <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><a href="#">Il y a plus d'une semaine</a></li>
        <li><a href="#">La semaine dernière</a></li>
        <li><a href="#">Hier</a></li>
        <li class="divider"></li>
        <li><a href="#">Demain</a></li>
        <li><a href="#">La semaine prochaine</a></li>
        <li><a href="#">Dans plus d'une semaine</a></li>
      </ul>
    </li>
    <li><a href="#">Hier soir</a></li>
    <li><a href="#">Ce soir</a></li>
  </ul>
  
  <div class="btn-group pull-right" data-toggle="buttons-radio">
    <button type="button" class="btn btn-primary active">Tout</button>
    <button type="button" class="btn">Sur mySkreen</button>
    <button type="button" class="btn">Sur iOS</button>
  </div>
  <div class="btn-group" data-toggle="buttons-radio">
    <button type="button" class="btn btn-primary active">Tout</button>
    <button type="button" class="btn">Films</button>
    <button type="button" class="btn">Emissions</button>
    <button type="button" class="btn">Séries</button>
    <button type="button" class="btn">Documentaires</button>
    <button type="button" class="btn">Sports</button>
    <button type="button" class="btn">Spectacles</button>
  </div>
  
  {% if channel.has_replay %}
  {% include 'SkreenHouseFactoryV3Bundle:Main:_slider.html.twig' with {slider: {title: 'channel.replay'|trans({'%website%': channel.has_replay}), 
                                                                                programs: channel.programs.replay}} %}
  {% endif %}
  
  {% if channel.epg %}
  {% include 'SkreenHouseFactoryV3Bundle:Main:_slider.html.twig' with {slider: {title: 'channel.epg'|trans({'%name%': channel.name}), 
                                                                                programs: channel.programs.epg}} %}
  {% endif %}
</div>
{% endblock %}