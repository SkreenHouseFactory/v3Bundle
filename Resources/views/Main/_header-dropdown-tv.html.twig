{% set header_base = app.environment == 'prod' ? 'http://www.myskreen.com' : '' %}
{% set tv_channels = ['TF1','FRANCE 2','FRANCE 3','CANAL +','FRANCE 4','FRANCE 5','FRANCE Ô','ARTE','M6','D8','D17','W9','TMC','NT1','NRJ 12','FRANCE 24','BFM TV','BFM Business','iTélé','Public Sénat'] %}
{% set web_channels = ['Allocine','Yahoo','Perform','Le Figaro','Europe 1','France Info','Le Monde','FranceTvSport','Marmiton','Doctissimo','Studio 4 0','Verywatch','It\'s big','Rendez-vous à Paris','Xtremevidéo','Paris Saint-Germain','La Chaîne techno','LeZapping','RMC sport','Arte Live Web'] %}
<ul class="dropdown-menu dropdown-menu-tv">
  <li class="nav-header">La grille TV</li>
  <li class="pull-left"><a href="{{ path('tvgrid') }}">En ce moment</a></li>
  <li class="pull-left"><a href="{{ path('tvgrid_date', {date: 'ce-soir'}) }}">Ce soir</a></li>
  <li class="pull-left"><a href="{{ path('tvgrid_date', {date: 'hier-soir'}) }}">Hier soir</a></li>
  <li class="clear divider"></li>
  <li class="nav-header">Les chaînes de la Tnt</li>
  <li class="tv-channels">
    {% for channel in tv_channels %}
    {% set slug = channel|lower|replace({ ' +': '', ' ': '-', 'é': 'e', 'à': 'a', 'ô': 'o', 'î': 'i', '\'': '-'})|raw %}
    <a data-tnt-name="{{ channel }}" class="tv-component" href="{{ header_base }}{{ path('channel', {slug: slug}) }}"><img src="http://mskstatic.com/37/40/medias/ico/chaines/{{ slug }}_medium.png" alt="{{ channel }} Replay"/></a>
    {% endfor %}
  </li>
  <li><a href="{{ path('sitemap_channels', {type: 'broadcast'}) }}"><i class="icon-chevron-right"></i> Toutes les chaines TV</a></li>
  <li class="divider clear"></li>
  <li class="nav-header">Les chaînes Web</li>
  <li class="tv-channels">
    {% for channel in web_channels %}
    {% set slug = channel|lower|replace({ ' +': '', ' ': '-', 'é': 'e', 'à': 'a', 'ô': 'o', 'î': 'i', '\'': '-'})|raw %}
    <a class="tv-component" href="{{ header_base }}{{ path('channel', {slug: slug}) }}"><span class="hidden-touch">{{ channel }}</span><img src="http://mskstatic.com/37/40/medias/ico/chaines/{{ slug }}_medium.png" alt="{{ channel }} Replay"/></a>
    {% endfor %}
  </li>
  <li><a href="{{ path('sitemap_channels', {type: 'webcast'}) }}"><i class="icon-chevron-right"></i> Toutes les chaînes web</a></li>
  <li class="divider clear"></li>
  <li class="nav-header">Les chaînes mySkreen</li>
  <li class="tv-channels">
    <a class="tv-component" href="{{ header_base }}{{ path('channel', {slug: 'plus-belle-la-vie-en-avance'}) }}"><span class="hidden-touch">Plus Belle La Vie en avance</span><img src="http://mskstatic.com/50/50/c/medias/photos/channel/28-logo-plus-belle-la-vie-en-avance.png" alt="Plus Belle La Vie en avance"/></a>
    <a class="tv-component" href="{{ header_base }}{{ path('channel', {slug: 'politique'}) }}"><span class="hidden-touch">La chaîne politique</span><img src="http://mskstatic.com/50/50/c/medias/photos/channel/12-logo-politique.jpg" alt="Politique, émissions et replay"/></a>
    <a class="tv-component" href="{{ header_base }}{{ path('channel', {slug: 'les-inconnus'}) }}"><span class="hidden-touch">Les Inconnus</span><img src="http://mskstatic.com/50/50/c/medias/photos/channel/1-les-inconnus.jpg" alt="Les Inconnus"/></a>
    <a class="tv-component" href="{{ header_base }}{{ path('channel', {slug: 'jacques-demy'}) }}"><span class="hidden-touch">Jacques Demy</span><img src="http://mskstatic.com/50/50/c/medias/photos/channel/3-jacques-demy.jpg" alt="Jacques Demy"/></a>
    {#<a class="tv-component" href="{{ header_base }}{{ path('channel', {slug: 'agnes-varda'}) }}"><span class="hidden-touch">Agnès Varda</span><img src="http://mskstatic.com/50/50/c/medias/photos/channel/8-logo-agnes-varda.jpg" alt="Agnès Varda"/></a>#}
  </li>
</ul>