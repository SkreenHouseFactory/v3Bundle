{% set header_base = app.environment == 'prod' ? 'http://www.myskreen.com' : '' %}
{% set tv_channels = ['TF1','FRANCE 2','FRANCE 3','CANAL +','FRANCE 4','FRANCE 5','FRANCE Ô','ARTE','M6','D8','D17','W9','TMC','NT1','NRJ 12','FRANCE 24','BFM TV','BFM Business','iTélé','Public Sénat','HD1','6Ter','numero 23','RMC découverte','Gulli','cherie 25','KTO'] %}
{% set web_channels = ['Allocine','Yahoo','Le Figaro','Europe 1','France Info','Le Monde','Marmiton','Doctissimo','Studio 4 0','Verywatch','It\'s big','Rendez-vous à Paris','psg-tv','La Chaîne techno','LeZapping','RMC sport','Arte Live Web','rtl','OFF TV','Men\'s UP TV'] %}
{% if home == 'cinema' %}
  <ul class="hover-menu cine hide">
    <div class="dropdown-borders vod-cine">
      <li>
        <a href="{{ header_base }}{{ path('homes', {home : 'cinema'}) }}">Tout le cinéma</a>
      </li>
      <li>
        <a href="{{ header_base }}{{ path('any_url', {url : 'cinema/selection/7845147-a-decouvrir-dans-les-salles-cette-semaine/'}) }}">{{ 'nav.theaters.release'|trans }}</a>
      </li>
      <li>
        <a href="{{ header_base }}{{ path('any_url', {url : 'cinema/selection/7845150-bientot-dans-les-salles/'}) }}">{{ 'nav.theaters.coming'|trans }}</a>
      </li>
      <li>
        <a href="{{ header_base }}{{ path('cinema_boxoffice') }}">{{ 'nav.theaters.boxoffice'|trans }}</a>
      </li>
    </div>
  </ul>
{% elseif home == 'video-a-la-demande' %}
  <ul class="hover-menu vod hide">
    <div class="dropdown-borders vod-cine">
      <li><a href="{{ header_base }}{{ path('homes', {home: 'video-a-la-demande'}) }}">Toute la vidéo à la demande</a></li>
      <li><a href="{{ header_base }}{{ path('homes_vod', {home: 'film'}) }}">{{ 'nav.films'|trans }}</a></li>
      <li><a href="{{ header_base }}{{ path('homes_vod', {home: 'documentaire'}) }}">{{ 'nav.documentaires'|trans }}</a></li>
      <li><a href="{{ header_base }}{{ path('homes_vod', {home: 'serie'}) }}">{{ 'nav.series'|trans }}</a></li>
      <li><a href="{{ header_base }}{{ path('homes_vod', {home: 'spectacle'}) }}">{{ 'nav.spectacles'|trans }}</a></li>
      <li><a href="{{ header_base }}{{ path('homes_vod', {home: 'jeunesse'}) }}">{{ 'nav.jeunesse'|trans }}</a></li>
    </div>
  </ul>

{% elseif home == 'tv' %}
  <ul class="hover-menu tv hide">
    <div class="dropdown-borders vod-cine">
      <li>
        <a href="{{ header_base }}{{ path('tvgrid') }}">Programme TV</a>
      </li>
      <li>
        <a href="{{ header_base }}{{ path('channel', {slug: 'itele'}) }}">La TV en direct</a>
      </li>
      <li>
        <a href="{{ header_base }}{{ path('channel', {slug: 'replay'}) }}">Replay TV</a>
      </li>
      <li>
        <span data-link-to-replace="{{ (header_base ~ path('channel', {slug: 'web-tv'}))|rot13 }}">Web TV</span>
      </li>
    </div>
  </ul>
{% endif %}