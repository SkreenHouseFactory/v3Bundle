<div id="carousel-{{ slider.title }}" data-carousel-autoload="1" class="carousel slide">
  <div class="carousel-inner">
  {% for p in slider.programs %}
  <div class="item{% if loop.first %} active{% endif %}">
    <img src="{{ p.sliderPicture }}" alt="{{ p.title }}" />
    <div class="carousel-caption">
      <h4>{{ p.title }}</h4>
      <p>{{ p.format }}, {{ p.duration }}mn</p>
    </div>
  </div>
  {% endfor %}
  </div>
  <a class="carousel-control left" href="#carousel-{{ slider.title }}" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#carousel-{{ slider.title }}" data-slide="next">&rsaquo;</a>
</div>