{% if noheader is not defined %}
<h3{% if slider.id is defined %} id="{{ slider.id }}-title"{% endif %} class="user-on-visibility">{{ slider.title }}</h3>
{% endif %}
<div{% if slider.id is defined %} id="{{ slider.id }}"{% endif %}{% if slider.url is defined %} url="{{ slider.url }}"{% endif %} class="slider" data-autoload="1" data-pager-offset="0" data-animate="width">
  <div class="slider-container">
    <ul class="items{% if addClass is defined %} {{ addClass }}{% endif %}">
      <li class="loader static">Chargement ...</li>
      {% for program in slider.programs %}
      {% include 'SkreenHouseFactoryV3Bundle:Main:_program.html.twig' with {p: program} %}
      {% endfor %}
    </ul>
  </div>
</div>