<div class="channels-modal">








 <form id="channels-search" class="form-search pull-left form-inline" role="form" method="get" action="http://{{ app.request.httpHost() }}{{ app.request.basePath() }}{{ path('tvgrid_addchannel') }}">
    <input type="hidden" name="dataType" value="text html">


  <div class="form-group">
    <label class="sr-only " for="exampleInputEmail2">{{ 'channels.search.placeholder'|trans }}</label>
    <input type="email" class="form-control search-query"  placeholder="{{ 'channels.search.placeholder'|trans }}" value="{{ app.request.get('q') }}">
  </div>

  <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"> </i>  {{ 'channels.search.submit'|trans }}</button>
</form>








  <div id="channels-list" class="clear" data-api-url="{{ path('tvgrid_addchannel') }}"></div>
</div>

<hr class="clear"/>
{% if channels|length == 0 and app.request.get('init') is null %}
  <p class="alert">{{ 'tvgrid.channels.noprogram.search'|trans }}</p>
{% elseif app.request.get('init') is null %}
  <div class="scroll" style="overflow-y: auto; max-height: 250px;">
  <table class="table table-striped">
  {% for channel in channels %}
    {% if channel.epg %}
    <tr><td class="actions" data-id="{{ channel.id }}">
      {#<a class="fav fav-epg pull-right btn btn-primary" data-id="{{ channel.id }}" data-img="{{ channel.img }}" data-seo-url="{{ channel.seo_url }}" data-name="{{ channel.name }}" href="#"><i class="icon-plus-sign icon-white"></i> </a>#}
      {% include 'SkreenHouseFactoryV3Bundle:Main:_btn-suivre.html.twig' with {id: channel.id, class: 'fav-epg pull-right', text: 'Ajouter Ã  la grille', name: channel.name } %}
      <img src="{{ channel.img }}"/> {{ channel.name }}
    </td></tr>
    {% endif %}
  {% endfor %}
  </table>
  </div>
	<script>
	console.log('Timeline/_popin-addchannel.html.twig script', 'onload search results', Skhf.session.datas);
	if (typeof Skhf.session.datas != 'undefined' && Skhf.session.datas.email) {
		UI.loadPlaylistTriggers('epg', Skhf.session.datas.epg.split(','), $('.modal'));
	}
	</script>
{% endif %}