          <button type="button" class="btn btn-voir"><i class="glyphicon glyphicon-play"></i>&nbsp;Voir</button>
      </div>
      <div class="col-xs-10">
        <div class="row">
          {# Type d'offre (intégralité, etc.) #}
          <div class="col-xs-16">
            {% if program.episode_title is defined and
                  program.episodeof is defined  and
