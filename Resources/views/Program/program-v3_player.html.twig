{# Player + Affiche #}
<div class="row playwrap">

  {# Player #}
  <div class="col-xs-11">
    <div id="player">
      {% include 'SkreenHouseFactoryV3Bundle:Program:_program-player.html.twig' %}
    </div>
  </div>
  {# Affiche #}
  <div class="col-xs-5">
    <div id="affiche">
      {% if 'missing' not in program.picture %}
        <a class="btn" data-big-picture="{{ ('<img src="' ~ (program.picture|replace({'273/368/' : '450/'})) ~ '" alt="' ~ program.title ~ '" />')|escape }}"><i class="glyphicon glyphicon-zoom-in"></i></a>
      {% endif %}
      <img src="{{ program.picture }}" alt="{{ program.title }} {{ program.has_vod in [6,8] ? 'Replay' : 'bande annonce' }}" />
      {% if program.popular_channel is defined %}
        <a href="{{ program.popular_channel.seo_url }}"><img class="channel" src="{{ program.popular_channel.img }}" alt="{{ program.popular_channel.name }} Replay" /></a>
      {% endif %}
    </div>
  </div>
</div>

{# Meilleure offre #}
<div class="row best-offer" data-play="4455555">
  {# Bouton Voir #}
  <div class="col-xs-3">
    <button class="btn btn-voir">
      <i class="glyphicon glyphicon-play"></i>
      &nbsp;Voir (acheté)
    </button>
  </div>
  {# Textes offre #}
  <div class="col-xs-9">
    <div class="row">
      {# Type d'offre (intégralité, etc.) #}
      <div class="col-xs-16">En intégralité sur myskreen</div>
    </div>
    <div class="row">
      {# Descriptif offre #}
      <div class="col-xs-16"><span>Visionnage illimité pendant 48h |</span><span>{% if program.duration %} {{ program.duration }} mn.{% endif %} VOST / HD | </span><span>PC / MAC / iOS / Androïd</span></div>
    </div>
  </div>
  {# Prix #}
  <div class="col-xs-2 price">14,99 €</div>
  {# Logo Fournisseur #}
  <div class="col-xs-2">
    <img src="http://mskstatic.com/x/50/medias/ico/chaines/bac-films_medium.png" alt="EuropaCorp Streaming">
  </div>
</div>