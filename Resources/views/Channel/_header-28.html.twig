<div id="cover">
  <div class="header-container">
    <div id="pblv" class="header-content">
    <h1 data-channel="{{ channel.title }}"><a href="{{ path('channel', {slug: channel.slug }) }}">{{ channel.title }}</a></h1>
      <div class="well">
        <div class="actions slider"><iframe frameborder="0" width="500" height="300" src="http://www.dailymotion.com/embed/video/x102q8s/?autoPlay=1&logo=0&related=0"></iframe></div>
      </div>
      <div class="pull-right actions" data-id="{{ channel.id }}" data-playlist="{{ fav }}">
        <a class="fav fav-{{ fav }} btn btn-large btn-primary" data-channel-name="{{ channel.title }}" data-placement="right"><i class="icon-plus-sign icon-white"></i> {{ trigger_fav is defined and trigger_fav ? trigger_fav : 'Suivre Plus Belle La Vie' }}</a>
      </div>
    </div>
  </div>
</div>
