{% set tnt_channels = ['TF1','FRANCE 2','FRANCE 3','CANAL +','FRANCE 4','FRANCE 5','FRANCE Ô','ARTE','M6','D8','D17','W9','TMC','NT1','NRJ 12','FRANCE 24','BFM TV','BFM Business','iTélé','Public Sénat','HD1','6Ter','numero 23','RMC découverte','Gulli','cherie 25'] %}
<div id="cover" class="cover-fournisseur">
<div class="header-container">
  {% if fournisseur.live.program is defined and fournisseur.live.program  %}
  <div class="container">
    <ul id="remote-tnt">
  <div id="carousel-chaine" class="carousel slide" data-interval="false">
    <div class="carousel-inner">
      <div class="item active">
    {% for c in tnt_channels %}
    {% set slug = c|lower|replace({ ' +': '', ' ': '-', 'é': 'e', 'à': 'a', 'ô': 'o', 'î': 'i', '\'': '-'})|raw %}
    {% if  loop.index == 22 %}
      </div>
      <div class="item pointer">
    {% endif %}
      <a data-toggle="tooltip" data-placement="top" title="" data-original-title="{{ c }}" href="{{ path('channel', {slug: slug}) }}"><img src="http://mskstatic.com/35/30/medias/ico/chaines/{{ slug }}_medium.png" alt="{{ c }} Replay"></a>
    {% endfor %}
      </div>
    </div>
    <a class="carousel-control left" data-slide="prev" href="#carousel-chaine">‹</a> 
    <a class="carousel-control right" data-slide="next" href="#carousel-chaine">›</a> </div>
</ul>

    <div class="well">
    <div class="well-inner">
    {% if fournisseur.live.player is defined %}
      <iframe class="player-live" frameborder="0" scrolling="no" src="{{ fournisseur.live.player }}"></iframe>
    {% elseif fournisseur.live.url is defined %}
      <br/>
      <br/>
      <p class="alert alert-info">Le direct est disponible sur le site de {{ fournisseur.name }}.</p>
      <br/>
      <p><a data-redirect="{{ fournisseur.live.url }}" class="btn btn-large"><i class="icon-share"></i> Voir le direct</a></p>
    {% else %}
      <br/>
      <br/>
      <p class="alert">Le direct n'est pas disponible.</p>
    {% endif %}
    </div>
    <div class="slider">
      {#<small>{{ fournisseur.live.program.best_offer.broadcast_begin|date('H:i')|upper }} / {{ fournisseur.live.program.best_offer.broadcast_end|date('H:i')|upper }}</small>#}
      <ul class="items">
        {% include 'SkreenHouseFactoryV3Bundle:Main:_program.html.twig' with { p: fournisseur.live.program, class: 'li-hover' } %}
      </ul>
      {% include 'SkreenHouseFactoryV3Bundle:Main:_btn-suivre.html.twig' with {id: fournisseur.live.program.id, class: 'fav-like', text: 'Suivre ce programme' } %}
    </div>
  </div>
  </div>
  {% endif %}
</div>
</div>