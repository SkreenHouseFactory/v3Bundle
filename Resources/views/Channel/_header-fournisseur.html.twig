{% set tnt_channels = ['TF1','FRANCE 2','FRANCE 3','CANAL','FRANCE 4','FRANCE 5','FRANCE Ô','ARTE','M6','D8','D17','W9','TMC','NT1','NRJ 12','FRANCE 24','BFM TV','BFM Business','iTélé','Public Sénat','HD1','6Ter','numéro 23','DISNEY CHANNEL','Gulli','RMC découverte','cherie 25','KTO'] %}
<div id="cover" class="cover-fournisseur">
<div class="header-container">
  <div class="container">
  <h1 data-channel="{{ channel.name }}" data-channel-slug="{{ slug }}">
  {{ channel.name }} : Replay & Direct
 </h1>
  <ul id="remote-tnt">
  <div id="carousel-chaine" class="carousel slide" data-interval="false">
    <div class="carousel-inner">
      <div class="item active">
        {% for c in tnt_channels %}
          {% set slug = c|lower|replace({ ' +': '', ' ': '-', 'é': 'e', 'à': 'a', 'ô': 'o', 'î': 'i', "\'": '-'})|raw %}
          {% if  loop.index == 26 %}
            </div>
            <div class="item pointer">
          {% endif %}
          <a data-toggle="tooltip" class="" data-placement="{{ loop.index in [1,2,3,4,5,26,27,28,29,30] ?'bottom':'top' }}"  data-original-title="{{c|upper}}" data-channel-slug="{{slug}}" href="{{ path('channel', {slug: slug}) }}">
            <p class="wrap-tv-remote"><img style="vertical-align: middle" src="http://mskstatic.com/50/medias/ico/chaines/{{ slug }}_medium.png" alt="{{ c }} Replay"></p></a>
        {% endfor %}
      </div>
    </div>
    <a class="carousel-control left" data-slide="prev" href="#carousel-chaine">‹</a> 
    <a class="carousel-control right" data-slide="next" href="#carousel-chaine">›</a> </div>
  </ul>

    <div class="well">
      <div class="well-inner" data-autoplay="1">
        {% if fournisseur.live.player is defined %}
          <iframe class="player-live" frameborder="0" scrolling="no" src="{{ fournisseur.live.player }}"></iframe>
        {% elseif fournisseur.live.url is defined %}
          <iframe src="http://api.myskreen.com/skPlayerPlugin/iframe.php?is_iframe=1&play=28370043&program_id={{ fournisseur.live.program is defined and fournisseur.live.program ? fournisseur.live.program.id : '' }}&fromWebsite=1{{ app.environment == 'dev' ? '&env=dev' : '' }}" class="player-live" scrolling="no" frameborder="0" style="height:200px"></iframe>
          <p class="alert"><a class="btn btn-default player-stop" data-redirect="{{ fournisseur.live.url }}"><i class="glyphicon glyphicon-play"></i> Voir le direct sur le site de {{ fournisseur.name }}</a></p>
        {% else %}
          <br/>
          <br/>
          <p class="alert alert-warning">Le direct n'est pas disponible.</p>
        {% endif %}
    </div>
    {% if fournisseur.live.program is defined and fournisseur.live.program  %}
    <div class="slider">
      {#<small>{{ fournisseur.live.program.best_offer.broadcast_begin|date('H:i')|upper }} / {{ fournisseur.live.program.best_offer.broadcast_end|date('H:i')|upper }}</small>#}
      <ul class="items">
        {% include 'SkreenHouseFactoryV3Bundle:Main:_program.html.twig' with { p: fournisseur.live.program, class: 'li-hover' } %}
      </ul>
      <a dt data-id="{{ fournisseur.live.program.id }}" class="btn btn-suivre fav-like btn-plus">Suivre</a>
    </div>
    {% endif %}
  </div>
  </div>
</div>
</div>