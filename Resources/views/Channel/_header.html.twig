        <div id="fake_h1" data-channel="{{ channel.title }}"><a href="{{ path('channel', {slug: channel.slug }) }}">{{ channel.title }}</a></div>
        {# ON UTILISE L'ICO COMME JAQUETTE PROGRAMME UNIQUEMENT
