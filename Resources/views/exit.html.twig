{# beead #}
{% javascripts
    '@SkreenHouseFactoryV3Bundle/Resources/public/js/vendors/jquery-1.8.0.min.js'
    '@SkreenHouseFactoryV3Bundle/Resources/public/js/vendors/jquery.cookies.min.js'
    '@SkreenHouseFactoryV3Bundle/Resources/public/js/vendors/inheritance.js'
    '@SkreenHouseFactoryV3Bundle/Resources/public/js/core/*' 
    filter='?yui_js' 
    output='js/compiled/v3-redirect.js'  %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script src="http://www.beead.fr/scripts/api/beead_apiV4.js"></script>
<script>
BeeadAds.init({pid:2751,
                jsCallback: "beeadCallbackSuccess", 
                noPubCallback: "beeadCallbackEmpty", 
                onCloseCallback: "beeadCallbackSuccess"});

API.init();

function beeadCallbackSuccess() {
  _gaq.push(['_trackEvent', 
            'beead', 
            'beead-redirect-completed', 
            document.location.pathname]);
  setTimeout(function() {
    document.location= '{{ url }}';
  }, 4000);
}
function beeadCallbackEmpty(){
  _gaq.push(['_trackEvent', 
      'beead', 
      'beead-redirect-ploof', 
      document.location.pathname]);
  setTimeout(function() {
    document.location= '{{ url }}';
  }, 4000)
}

function ad() {
  
    setTimeout(function() {
      document.location= '{{ url }}';
    }, 4000);
    return false;
  

  _gaq.push(['_trackEvent', 
            'beead', 
            'beead-called', 
            document.location.pathname]);

  var cookie = API.cookie('ad');
  if ((document.referrer && document.referrer.match(/myskreen/) == null) || 
      (cookie && cookie != null)) {
    console.log('BeeAd', 'disabled');
    _gaq.push(['_trackEvent', 
              'beead', 
              'beead-has-cookie', 
              document.location.pathname]);
    setTimeout(function() {
      document.location= '{{ url }}';
    }, 4000);
  
  } else {
    console.log('BeeAd', 'enabled');

    var date = new Date();
    date.setTime(date.getTime() + (12 * 3600 * 1000));
    API.cookie('ad', 'hascookie',  date);
    console.log('setCookie', date);
    BeeadAds.gateway();
    _gaq.push(['_trackEvent', 
              'beead', 
              'beead-redirect-displayed', 
              document.location.pathname]);
  }
}</script>

</body>
