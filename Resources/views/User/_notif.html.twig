<tr class="tv-component {{ n.offers }} {{ n.access|replace({'(windows)': ''}) }}">
  <td>
    <div class="row">
      <a class="notif-link" href="{{ path('any_url', {url: n.program.seo_url[1:n.program.seo_url|length-1]}) }}">
        <div class="col-xs-2 clearfix">
          {% if n.channel_ico is defined and n.channel_ico %}
            <img src="{{ n.channel_ico|replace({'39/35': '40'}) }}" class="pull-left"/>
          {% endif %}
          {% if n.ico is defined and n.ico %}
            <img src="{{ n.ico|replace({'45/45': '40/40'}) }}" class="pull-right"/>
          {% endif %}
        </div>
        <div class="col-xs-13">
          <div class="row">
            <div class="col-xs-16 title">
              {{ n.title|raw }}{{ n.title_episode is defined and n.title_episode ? (', <span>' ~ n.title_episode ~ '</span>')|raw : '' }}
            </div>
          </div>
          <div class="row">
            <div class="col-xs-16 label-container">
              {% if n.new is defined and n.new %}
                <span class="badge badge-danger">Nouveau</span>
              {% endif %}
              <span class="origine">Vous suivez {{ n.playlist.origin.object_name }}</span>
              {% if n.offers is defined and n.offers in ['plays', 'broadcasts'] %}
                {% if n.type is defined and n.type in ['broadcast', 'dispo'] %}
                  <span class="label label-success">{{ n.subtitle|raw }}</span>
                {% endif %}
              {% endif %}
            </div>
          </div>
        </div>
      </a>
      <div class="col-xs-1">
        <div class="row text-right">
          <a class="remove" data-id="{{ n.id }}">
            <span class="glyphicon glyphicon-trash"></span>
          </a>
        </div>
      </div>
    </div>
  </td>
</tr>