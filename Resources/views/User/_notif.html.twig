<tr>
  <td>
    <div class="row">
      <a class="notif-link" href="{{ path('any_url', {url: n.program.seo_url[1:n.program.seo_url|length-1]}) }}">
        <div class="col-xs-3 clearfix">
          {% if n.channel_ico is defined and n.channel_ico %}
            <img src="{{ n.channel_ico|replace({'39/35': '60'}) }}" class="pull-left"/>
          {% endif %}
          {% if n.ico is defined and n.ico %}
            <img src="{{ n.ico|replace({'45/45': '60/60'}) }}" class="pull-right"/>
          {% endif %}
        </div>
        <div class="col-xs-12">
          {% if n.new is defined and n.new %}
            <span class="badge badge-danger">Nouveau</span>
          {% endif %}
          <div class="row">
            <div class="col-xs-16 title">
              {{ n.title|raw }}{{ n.title_episode is defined and n.title_episode ? (', <small>' ~ n.title_episode ~ '</small>')|raw : '' }}
            </div>
          </div>
          <div class="row">
            <div class="col-xs-16 label-container">
              {% if n.offers is defined and n.offers in ['plays', 'broadcasts'] %}
                {% if n.type is defined and n.type in ['broadcast', 'dispo'] %}
                  <span class="label label-success">{{ n.subtitle|raw }}</span>
                {% endif %}
              {% endif %}
            </div>
          </div>
        </div>
      </a>
      <div class="col-xs-1">
        <div class="row text-right">
          <a class="info">
            <span data-toggle="tooltip" data-container="body" data-placement="left" data-original-title="Vous suivez {{ n.playlist.origin.object_name }}" class="glyphicon glyphicon-question-sign"></span>
          </a>
        </div>
        <div class="row text-right">
          <a class="remove" data-id="{{ n.id }}">
            <span class="glyphicon glyphicon-trash"></span>
          </a>
        </div>
      </div>
    </div>
  </td>
</tr>