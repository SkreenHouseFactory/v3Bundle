  {% include 'SkreenHouseFactoryV3Bundle:User:bandeau-listes.html.twig' with {active: 'channel' } %}

  <div class="container">
    {% if channels|length == 0 %}
      <p class="bs-callout bs-callout-info">Vous ne suivez aucune cha√Æne.</p>
    {% endif %}
    <br class="clear"/>

    <div>
      {% for item in channels|to_array %}
        {% include 'SkreenHouseFactoryV3Bundle:Slider:_slider-channels_item.html.twig' with { item: item } %}
      {% endfor %}
    </div>

    {% render(controller('SkreenHouseFactoryV3Bundle:User:suggest', { type: 'channel' })) %}
    {#{ render_esi(controller('SkreenHouseFactoryV3Bundle:User:suggest', { type: 'channel' })) }#}

  </div>

{% endblock %}