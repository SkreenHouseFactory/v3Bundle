{% extends "SkreenHouseFactoryV3Bundle::layout.html.twig" %}

{% block title %}
  Commencer Mes Listes
{% endblock %}

{% block body_attribute %} data-spy="scroll" data-target=".navbar-vertical" data-offset="50"{% endblock %}

{% block content %}
  <div id="bandeau-listes">
    <div class="container">
      <h1>Créer Mes listes</h1>
      <p id="intro-step-one" class="sk-font">vous permet de suivre les programmes, acteurs, réalisateurs, salles de cinémas et catégories que vous aimez !</p>
      <div id="intro-ligne-one" class="intro-ligne"></div>
      <p id="intro-step-two" class="sk-font">Dès qu'un programme correspondant à vos listes est diffusé à la Télé, disponible en ligne ou programmé au Cinéma, myskreen vous le signale.</p>
      <div id="intro-ligne-two" class="intro-ligne"></div>
      <p id="intro-step-three" class="sk-font">Retrouvez au même endroit la Télé, le Replay, la Vidéo à la demande, les Web TV et le Cinéma !</p>
      <div id="intro-ligne-three" class="intro-ligne"></div>
      <div id="intro-ligne-four" class="intro-ligne"></div>
      <a href="#films" class="btn btn-default btn-primary btn-lg"><span class="glyphicon glyphicon-circle-arrow-right"></span> Commencer Mes listes</a>
    </div>
  </div>
  <div class="fond-bleu">
    <div class="bg"></div>
    <div class="container">
      <div class="navbar-vertical col-xs-5">
        <ul class="nav timeline sk-font">
          <li><a href="#films">Mes films <span id="count-films" class="badge">0</span></a></li>
          <li><a href="#emissions">Mes émissions <span id="count-emissions" class="badge">0</span></a></li>
          <li><a href="#series">Mes séries <span id="count-series" class="badge">0</span></a></li>
          <li><a href="#persons">Mes personnalités <span id="count-persons" class="badge">0</span></a></li>
          <li><a href="#theaters">Mes salles de cinéma <span id="count-theaters" class="badge">0</span></a></li>
          <li><a href="#categories">Mes catégories<span id="count-categories" class="badge">0</span></a></li>
          {#<li><a href="#channels">Mes Chaînes <span id="count-channels" class="badge">0</span></a></li>#}
          <li class="confirm"><a href="#confirm">Enregistrer</a></li>
        </ul>
      </div>
      <div class="forms-container col-xs-11">
        <div class="relative">
          <a class="btn btn-default btn-primary btn-lg" data-trigger-click="a[href='#emissions']"><span class="glyphicon glyphicon-circle-arrow-right"></span> Fini ? Passez aux émissions que vous ne voulez pas rater !</a>
          <div class="form-container">
            {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'films', title: 'Quels sont les films qui vous plaisent ?', placeholder: 'Avengers, Intouchables...', suggests: selection_pack.films.programs} %}
          </div>
        </div>
        <div class="relative">
          <a class="btn btn-default btn-primary btn-lg" data-trigger-click="a[href='#series']"><span class="glyphicon glyphicon-circle-arrow-right"></span> On continue ? Ajoutez les séries que vous suivez !</a>
          <div class="form-container">
            {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'emissions', title: 'Une émission manquée ? Ajoutez-la...', placeholder: 'The Voice, Le Petit Journal...', suggests: selection_pack.emissions.programs} %}
          </div>
        </div>
        <div class="relative">
          <a class="btn btn-default btn-primary btn-lg" data-trigger-click="a[href='#persons']"><span class="glyphicon glyphicon-circle-arrow-right"></span> Fan d'un acteur, d'un réalisateur ? Par ici !</a>
          <div class="form-container">
            {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'series', title: 'Retrouvez et sélectionnez vos séries fétiches...', placeholder: 'How I Met Your Mother, House of Cards...', suggests: selection_pack.series.programs} %}
          </div>
        </div>
        <div class="relative">
          <a class="btn btn-default btn-primary btn-lg" data-trigger-click="a[href='#theaters']"><span class="glyphicon glyphicon-circle-arrow-right"></span> Vous aimez les salles ? Ajoutez les cinémas près de chez vous !</a>
          <div class="form-container">
            {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'persons', title: 'Toutes vos personnalités préférées à suivre...', placeholder: 'Leonardo DiCaprio, Steven Spielberg...', suggests: selection_pack.persons} %}
          </div>
        </div>
        <div class="relative">
          <a class="btn btn-default btn-primary btn-lg" data-trigger-click="a[href='#categories']"><span class="glyphicon glyphicon-circle-arrow-right"></span> Plutôt "Cht'i" ou "Superman" ? Ou les deux ?</a>
          <div class="form-container">
            {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'theaters', title: 'Quels sont les écrans que vous fréquentez ?', placeholder: 'Marseille, 75014, Le Palace...', suggests: null} %}
          </div>
        </div>
        <div class="relative">
          <a class="btn btn-default btn-primary btn-lg user-off" data-trigger-click="a[href='#confirm']"><span class="glyphicon glyphicon-circle-arrow-right"></span> Terminé ! Vous n'avez plus qu'à enregistrez vos listes</a>
          <div class="form-container">
            {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'categories', title: 'Choisissez les catégories de programmes qui vous ressemblent...', placeholder: 'séries US, comédies dramatiques, téléréalités...', suggests: selection_pack.categories} %}
          </div>
        </div>
        {#<div class="form-container">
          {% set suggest_chaines = selection_pack.chaines.programs %}
          {% include 'SkreenHouseFactoryV3Bundle:User:_start-form.html.twig' with {step: 'channels', title: 'Vos chaînes', placeholder: 'Humour, Sport, Politique...', suggests: suggest_chaines} %}
        </div>
        #}
        <div class="relative">
          <a id="register" class="btn btn-default btn-primary btn-lg hide"><span class="glyphicon glyphicon-floppy-disk"></span> Enregistrer mes listes</a>
          <div class="form-container confirmed scroll">
            <h2 id="confirm">Mes listes</h2>
            <div class="no-results bs-callout bs-callout-info">
              <p class="h4">Vous n'avez pas encore fait vos listes</p>
              <p><a class="btn btn-primary" href="#films">Commencer maintenant</a></p>
            </div>
            <div class="results hide">
              <ul></ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block pagestyles %}
  {% stylesheets
    '@SkreenHouseFactoryV3Bundle/Resources/public/less/start.less'
      filter='lessphp,?yui_css'
      output='css/start.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
  {% endstylesheets %}
{% endblock %}

{% block pagescripts %}
  {% javascripts
    '@SkreenHouseFactoryV3Bundle/Resources/public/js/scripts/user-start.js'
    filter='?yui_js' 
    output='js/compiled/pages/user-start.js'  %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}