<div id="bandeau-listes"{% if no_background is defined %} class="bg-none"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col-xs-4{% if active is defined and active == 'programs' %} active{% endif %} col-users">
        <div class="row titres user-off{% if active is defined and 'user' in app.request.uri %} hide{% endif %}">
          <div class="col-xs-16">
            <a class="auth">
              <img src="{{ asset('bundles/skreenhousefactoryv3/images/icons/programs.png')}}">
              <p class="sk-font">Vos programmes</p>
            </a>
          </div>
        </div>
        <div class="row titres user-on hide auth">
          <div class="col-xs-16" data-fav="like">
            <a href="{{ path('user_programs') }}">
              <span class="badge{{ (active is defined and active == 'programs') ? '' : ' bg-white grey' }}"></span>
              <p class="sk-font">Vos programmes</p>
            </a>
          </div>
        </div>
        <div class="row descriptions">
          <div class="col-xs-16" data-fav="like">
            <p class="sk-font">Ajoutez vos programmes préférés pour ne jamais les rater</p>
          </div>
        </div>
      </div>
      <div class="col-xs-4{% if active is defined and active == 'channel' %} active{% endif %} col-users">
        <div class="row titres user-off{% if active is defined and 'user' in app.request.uri %} hide{% endif %}">
          <div class="col-xs-16" data-fav="channel">
            <a class="auth">
              <img src="{{ asset('bundles/skreenhousefactoryv3/images/icons/channel.png')}}">
              <p class="sk-font">Vos chaînes</p>
            </a>
          </div>
        </div>
        <div class="row titres user-on hide auth">
          <div class="col-xs-16" data-fav="channel">
            <a href="{{ path('user_channels') }}">
              <span class="badge{{ (active is defined and active == 'channel') ? '' : ' bg-white grey' }}"></span>
              <p class="sk-font">Vos chaînes</p>
            </a>
          </div>
        </div>
        <div class="row descriptions">
          <div class="col-xs-16" data-fav="channel">
            <p class="sk-font">Festival de Cannes, humour, politique, etc.</p>
          </div>
        </div>
      </div>
      <div class="col-xs-4{% if active is defined and active == 'theaters' %} active{% endif %} col-users">
        <div class="row titres user-off{% if active is defined and 'user' in app.request.uri %} hide{% endif %}">
          <div class="col-xs-16" data-fav="cinema">
            <a class="auth">
              <img src="{{ asset('bundles/skreenhousefactoryv3/images/icons/cinema.png')}}">
              <p class="sk-font">Vos cinémas</p>
            </a>
          </div>
        </div>
        <div class="row titres user-on hide auth">
          <div class="col-xs-16" data-fav="cinema">
            <a href="{{ path('user_theaters') }}">
              <span class="badge{{ (active is defined and active == 'theaters') ? '' : ' bg-white grey' }}"></span>
              <p class="sk-font">Vos cinémas</p>
            </a>
          </div>
        </div>
        <div class="row descriptions">
          <div class="col-xs-16" data-fav="cinema">
            <p class="sk-font">Retrouvez ici la programmation des salles près de chez vous</p>
          </div>
        </div>
      </div>
      <div class="col-xs-4{% if active is defined and active == 'persons' %} active{% endif %} col-users">
        <div class="row titres user-off{% if active is defined and 'user' in app.request.uri %} hide{% endif %}">
