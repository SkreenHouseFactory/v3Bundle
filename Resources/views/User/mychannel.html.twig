{% extends 'SkreenHouseFactoryV3Bundle::layout.html.twig' %}

{% block title %}{{ 'page.title.user.mychannel'|trans }}{% endblock %}

{% block content %}
  <div id="view-mychannel" class="container">
    {% set email = datas.email|split('@') %}
    {% set name_email = email[0]|split('.') %}
    <h1>{{ datas.user_channel is defined and datas.user_channel ? 'Gérer ma chaîne myskreen' : 'Créer ma chaîne myskreen' }}</h1>
    <p>Publiez vos listes sur Facebook et twitter et diffusez en permanence vos contenus préférées sur votre chaine.</p>
    <p>Vous choisissez le nom, par exemple {{ datas.user_channel is defined and datas.user_channel and datas.user_channel.slug is defined and datas.user_channel.slug ? 'www.myskreen.com/' ~ datas.user_channel.slug ~ '/' : 'www.myskreen.com/' ~ name_email[0] ~ '/' }}</p>
    <div class="message-alert clearfix">
      {% if datas.user_channel is defined and datas.user_channel %}
        {% if datas.user_channel.is_active is defined and datas.user_channel.is_active %}
          <p class="alert alert-info">Votre chaîne personnelle existe déjà.</p>
        {% else %}
          <p class="alert alert-warning">Votre chaîne personnelle existe déjà, mais vous ne l'avez pas encore publiée.</p>
        {% endif %}
        <div class="row">
          <div class="col-xs-5">Nom de ma chaîne :</div>
          <div class="col-xs-11 channel-name" data-value="{{ datas.user_channel.name is defined and datas.user_channel.name ? datas.user_channel.name : '' }}">{{ datas.user_channel.name is defined and datas.user_channel.name ? datas.user_channel.name : '' }}</div>
        </div>
        <div class="row">
          <div class="col-xs-5">Description :</div>
          <div class="col-xs-11 channel_description" data-value="{{ datas.user_channel.description is defined and datas.user_channel.description ? datas.user_channel.description : '' }}">{{ datas.user_channel.description is defined and datas.user_channel.description ? datas.user_channel.description : '' }}</div>
        </div>
        <div class="row">
          <div class="col-xs-5">URL :</div>
          <div class="col-xs-11 channel-slug" data-value="{{ datas.user_channel.slug is defined and datas.user_channel.slug ? datas.user_channel.slug : '' }}">{{ datas.user_channel.slug is defined and datas.user_channel.slug ? (datas.user_channel.slug ~ ' <small> (ce qui donne : www.myskreen.com/' ~ datas.user_channel.slug ~ '/)</small>')|raw : '' }}</div>
        </div>
        {% if datas.user_channel.is_active is defined and datas.user_channel.is_active %}
          <p class="clearfix">Vous pouvez la consulter : <a href="{{ path('any_url', {url: datas.user_channel.seo_url|replace({'/': ''})}) }}">www.myskreen.com/{{ datas.user_channel.slug }}/</a>
        {% else %}
          <p class="clearfix">Vous pouvez la prévisualiser : <a href="{{ path('any_url', {url: datas.user_channel.seo_url|replace({'/': ''})}) }}/?preview=1">www.myskreen.com/{{ datas.user_channel.slug }}/</a>
          <button class="col-xs-3 btn btn-success pull-right publish">Publier</button>
        {% endif %}
        <button class="col-xs-3 btn btn-warning pull-right delete">Supprimer</button></p>
      {% else %}
        <p class="alert alert-danger">Vous n'avez pas encore créé votre chaîne personnelle.</p>
      {% endif %}
    </div>
    <form id="form-channel" class="form-horizontal" role="form">
      <div class="form-group">
        <label for="channel_name" class="col-xs-4 control-label">Nom<br/>
          <small>(max. 30 caractères)</small>
        </label>
        <div class="col-xs-12">
          <div class="error name-error"></div>
          <input type="text" class="form-control" id="channel_name" placeholder="Le nom de votre chaîne" />
        </div>
      </div>
      <div class="form-group">
        <label for="channel_description" class="col-xs-4 control-label">Description<br/>
          <small>(max. 60 caractères)</small>
        </label>
        <div class="col-xs-12">
          <div class="error description-error"></div>
          <input type="text" class="form-control" id="channel_description" placeholder="La description de votre chaîne" />
        </div>
      </div>
      <div class="form-group">
        <label for="channel_slug" class="col-xs-4 control-label">URL<br/>
          <small>(max. 12 caractères, sans espace)</small>
        </label>
        <div class="col-xs-12">
          <div class="error slug-error"></div>
          <input type="text" class="form-control" id="channel_slug" placeholder="Le texte de l'adresse URL de votre chaîne - par exemple : www.myskreen.com/jeandupont/" />
        </div>
      </div>
      <div class="form-group">
        {% if datas.user_channel is defined and datas.user_channel %}
          <button class="col-xs-3 btn btn-primary pull-right modify" type="submit">Modifier</button>
        {% else %}
          <button class="col-xs-3 btn btn-primary pull-right create" type="submit">Créer</button>
        {% endif %}
      </div>
    </form>
  </div>
{% endblock %}

{% block pagescripts %}
{% javascripts
    '@SkreenHouseFactoryV3Bundle/Resources/public/js/scripts/user-mychannel.js'    
    filter='?yui_js' 
    output='js/compiled/pages/user-mychannel.js'  %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}