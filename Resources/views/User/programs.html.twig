{% extends 'SkreenHouseFactoryV3Bundle::layout.html.twig' %}

{% block title %}{{ 'service.name'|trans }} - {{ 'page.title.user.programs'|trans }}{% endblock %}

{% block content %}
<div class="container">
  <h1>{{ 'user.programs'|trans }}</h1>
  <br/>

  <ul class="nav nav-pills nav-alpha-client uppercase">
    <li{% if app.request.get('onglet') is null %} class="active"{% endif %}>
      <a href="{{ path('user_programs', {onglet: null}) }}">{{ 'nav.all'|trans }}</a>
    </li>
    {% for o in onglets %}
      <li{% if app.request.get('onglet') == o %} class="active"{% endif %}>
        <a href="{{ path('user_programs', {onglet: o}) }}">{{ o }}</a>
      </li>
    {% endfor %}
  </ul>

  <div class="pagination pagination-client-alpha">
    <ul>
        <li{% if app.request.get('alpha') is null %} class="active"{% endif %}><a title="{{ 'nav.all'|trans }}" href="javascript://">{{ 'nav.all'|trans }}</a></li>
      {% for l in alpha %}
        <li{% if app.request.get('alpha') == l %} class="active"{% elseif l not in alpha_available %} class="disabled"{% endif %}><a title="{{ 'filter.alpha'|trans({alpha: l}) }}" href="javascript://">{{ l }}</a></li>
      {% endfor %}
    </ul>
  </div>

  <div id="user-programs" class="slider slider-list">
    <ul class="items">
    {% for p in programs %}
      {% include 'SkreenHouseFactoryV3Bundle:Main:_program.html.twig' with {'p': p} %}
    {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}