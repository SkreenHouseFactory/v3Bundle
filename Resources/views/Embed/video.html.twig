{% extends 'SkreenHouseFactoryV3Bundle::empty.html.twig' %}
{% block nostats %}nostat{% endblock %}

{% block meta %}
<meta name="robots" content="noindex,nofollow" />
<style>
body {
  margin: 0;
  padding: 0;
  max-height: 450px;
}
#player { height: 100%;background-size: auto 100%; }
#trigger {
  opacity: 0.8;
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  background: url({{ asset('bundles/skreenhousefactoryv3/images/big-play-shadow.png') }}) no-repeat center;
}
#trigger:hover{
  opacity: 1;
}
</style>
{% endblock %}
{% block title %}embed{% endblock %}
{% block description %}embed{% endblock %}

{% block content %}
<div style="display:block">
<a class="player-cover" target="_blank" style="position:absolute;top:3%;right: 20px;z-index:3;" href="http://www.myskreen.com"><img src="http://mskstatic.com/{{ app.request.get('width') and app.request.get('width') < 300 ? '100/' : '' }}medias/logo_player.png" alt="mySkreen : Guide Replay, Vod, Ciné" style="border:none"></a>
{% if offer.countdown is defined and offer.countdown %}
{% include 'SkreenHouseFactoryV3Bundle:Embed:_countdown.html.twig' with {player: offer} %}
{% if offer.id == 33505825 %}
<p class="countdown-info"><a target="_blank" href="http://www.myskreen.com/emission/humour/5421499-les-inconnus-c-est-leur-destin/?fromPackshotWithCountdown">&raquo; et en direct sur France 2 samedi 28/12 à 20h45</a></p>
{% endif %}
{% else %}
<a class="player-cover" id="trigger" data-play-embed="{{ {playId: offer.id, width: "100%", height: "100%", skKey: app.request.get('skKey'), forceMobileDevice: app.request.get('forceMobileDevice'), noPub: app.request.get('noPub'), env: app.environment }|json_encode }}"></a>
{% endif %}
<div id="player" style="background: black url({{ offer.program.picture }}) center no-repeat;width:100%;height:100%;background-size: 100% auto;position:absolute;" class="player on"></div>
</div>

