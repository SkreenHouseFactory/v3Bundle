{% extends 'SkreenHouseFactoryV3Bundle::layout.html.twig' %}

{% block meta %}
{% if selection.programs|length < 6 %}
<meta name="robots" content="noindex,follow" />
{% endif %}
<meta property="og:title" content="{{ selection.name }}" />
<meta property="og:description" content="{{ selection.description }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="http://www.myskreen.com{{ selection.seo_url }}" />
{% if selection.picture %}
<meta property="og:image" content="{{ selection.picture }}" />
<link rel="image_src" href="{{ selection.picture }}" />
{% endif %}
<meta name="object_type" content="website" />
{% endblock %}
{% block title %}{{ selection.name|striptags }}{% endblock %}
{% block description %}{{ selection.description|replace({"\n": ''})|striptags|slice(0, 165) }}{% endblock %}

{% block content %}

{% include 'SkreenHouseFactoryV3Bundle:Channel:_header.html.twig' with {channel: selection.onglet.channel, data: selection.onglet, fav: 'page'} %}
<div id="view-selection" class="container">

  <div class="pull-right share-block">{% include 'SkreenHouseFactoryV3Bundle:Main:_share.html.twig' with {url: 'http://www.myskreen.com' ~ selection.seo_url, text: selection.name ~ ' sur mySkreen' } %}</div>

  <h1>{{ selection.name|raw }}</h1>
  <p class="clear">{{ selection.description }}</p>

  <div style="position:absolute;top:50;right:0;width: 300px;">
  {#<a class="btn btn-large btn-inverse btn-block trigger-tv" href="#" data-couchmode="{{ {'type': 'pack', 'id': selection.id}|json_encode }}"><i class="icon-off icon-white"></i> {{ 'program.tv.on'|trans }}</a>#}
  <br/>
  <ul class="nav nav-tabs nav-stacked">
    {% for pack in selection.onglet.sliders %}
    <li><a href="{{ path('any_url', {url: pack.seo_url[1:pack.seo_url|length-1]}) }}">{{ pack.name|raw }}</a></li>
    {% endfor %}
  </ul>
  </div>

  <div id="selection-programs" class="slider slider-list" style="width: 70%;clear:none;">
    <ul class="items">
    {% for program in selection.programs %}
    {% include 'SkreenHouseFactoryV3Bundle:Main:_program.html.twig' with {p: program} %}
    {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}